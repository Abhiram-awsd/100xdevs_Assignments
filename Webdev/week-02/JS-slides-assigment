// Write a function that takes a new object as input which has name , age  and gender and greets the user with their gender (Hi Mr/Mrs/Others harkirat, your age is 21)Also tell the user if they are legal to vote or not

function greet(user){
    let sal;

    if(user.Gender==="Male"){
        sal="Mr."
    }

    else if(user.Gender==="Female"){
        sal="Mrs."
    }

    else{
        sal="others"
    }


     console.log(`Hi ${sal}${user.name}, your age is ${user.age}`);

     if (user.age>=18){
        console.log("You can vote!!");
     }
    else{
        console.log("you are not eligible to vote...")
    }

}

let user={
    name:"Harkirat",
    age:20,
    Gender:"Male",

};

greet(user);

// Write a function that takes an array of numbers as input, and returns a new array with only even values. 

let numbers =[1,2,3,4,5,6,7]

let even_nums=numbers.filter(iseven);
console.log(even_nums);


function iseven(element){
    return element%2 ===0;
}

