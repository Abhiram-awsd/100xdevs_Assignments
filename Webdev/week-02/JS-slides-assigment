// Create a function that takes an array of objects as input,
// and returns the users whose age > 18 and are male

let users=[{
    name:"Abhi",
    age:20,
    gender:"Male"
},{
    name:"preethi",
    age:20,
    gender:"Female"
},{
    name:"Rehan",
    age:20,
    gender:"Male"
}]

console.log("List of people who are above 18 and are Male :");
let adultmale = users.filter(isadultM);
console.log(adultmale)

function isadultM(element){
    return element.age >=18 && element.gender=="Male"; 
}

